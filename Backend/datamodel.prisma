type Thing {
  id: ID! @id @unique
  title: String
  author: Member!
  featuredImage: String
  link: String
  content: [ContentPiece!] @scalarList(strategy:RELATION)
  partOfTags: [Tag]
  partOfCategory: Category!
  votes: [Vote]
  passes: [Pass]
  score: Int! @default(value: 0)
  winner: DateTime
  comments: [Comment]
  eliminated: Boolean! @default(value: false)
  finalistDate: DateTime
  privacy: PrivacySetting @default(value: Private)
  createdAt: DateTime! @createdAt
  updatedAt: DateTime @updatedAt
}

type ContentPiece {
   id: ID! @id @unique
   content: String!
   onThing: Thing
   onTag: Tag
   onCategory: Category
}

type Tag {
  id: ID! @id @unique
  title: String!
  author: Member
  featuredImage: String
  public: Boolean @default(value: false)
  content: [ContentPiece!] @scalarList(strategy:RELATION)
  connectedThings: [Thing]
  comments: [Comment]
  score: Int! @default(value: 0)
  createdAt: DateTime! @createdAt
  updatedAt: DateTime @updatedAt
}

type Category {
  id: ID! @id @unique
  title: String! @unique
  featuredImage: String
  color: String
  content: [ContentPiece!] @scalarList(strategy:RELATION)
  connectedThings: [Thing]
  comments: [Comment]
  createdAt: DateTime! @createdAt
  updatedAt: DateTime @updatedAt
}

type Comment {
  id: ID! @id @unique
  author: Member!
  comment: String!
  createdAt: DateTime! @createdAt
  updatedAt: DateTime @updatedAt
  onThing: Thing
  onComment: Comment
  onTag: Tag
  onCategory: Category
}

type Vote {
  id: ID! @id @unique
  voter: Member!
  onThing: Thing
  onComment: Comment
  value: Int!
  createdAt: DateTime! @createdAt
}

type Pass {
   id: ID! @id @unique
   passer: Member!
   onThing: Thing
   createdAt: DateTime! @createdAt
}

type Member {
  id: ID! @id @unique
  displayName: String!
  name: String
  avatar: String
  rep: Int! @default(value: 0)
  points: Int! @default(value: 0)
  giveableRep: Int! @default(value: 0)
  friends: [Member]
  twitchName: String
  email: String! @unique
  votes: [Vote]
  passes: [Pass]
  createdThings: [Thing]
  ownedTags: [Tag]
  defaultCategory: Category @relation(name: "DefaultCategory")
  defaultPrivacy: PrivacySetting
  comments: [Comment]
  password: String!
  roles: [Role!] @scalarList(strategy: RELATION)
  role: Role
  resetToken: String
  resetTokenExpiry: Float
  twitterTokenSecret: String
  twitterUserName: String
  twitterUserID: String
  twitterUserToken: String
  twitterUserTokenSecret: String
  twitterListsObject: String
  twitterSeenIDs: [String] @scalarList(strategy: RELATION)
  createdAt: DateTime! @createdAt
  updatedAt: DateTime @updatedAt
}

enum Role {
  Admin
  Editor
  Moderator
  Member
  LiteMember
}

enum PrivacySetting {
   Public
   Private
   Friends
   FriendsOfFriends
}