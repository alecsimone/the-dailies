type Thing {
  id: ID! @id @unique
  title: String! @default(value: "Untitled Thing")
  author: Member!
  featuredImage: String
  link: String
  content: [ContentPiece!] @scalarList(strategy:RELATION)
  contentOrder: [String!] @scalarList(strategy:RELATION)
  partOfTags: [Tag]
  partOfStacks: [Stack]
  color: String
  votes: [Vote]
  passes: [Pass]
  score: Int! @default(value: 0)
  winner: DateTime
  comments: [Comment]
  eliminated: Boolean! @default(value: false)
  finalistDate: DateTime
  privacy: PrivacySetting @default(value: Private)
  createdAt: DateTime! @createdAt
  updatedAt: DateTime @updatedAt
}

type ContentPiece {
   id: ID! @id @unique
   content: String!
   onThing: Thing
   onTag: Tag
}

type Tag {
  id: ID! @id @unique
  title: String! @unique
  author: Member!
  featuredImage: String
  content: [ContentPiece!] @scalarList(strategy:RELATION)
  contentOrder: [String!] @scalarList(strategy:RELATION)
  connectedThings: [Thing]
  color: String
  comments: [Comment]
  createdAt: DateTime! @createdAt
  updatedAt: DateTime @updatedAt
}

type Stack {
  id: ID! @id @unique
  title: String!
  author: Member!
  featuredImage: String
  content: [ContentPiece!] @scalarList(strategy:RELATION)
  contentOrder: [String!] @scalarList(strategy:RELATION)
  connectedThings: [Thing]
  color: String
  comments: [Comment]
  createdAt: DateTime! @createdAt
  updatedAt: DateTime @updatedAt
}

type Comment {
  id: ID! @id @unique
  author: Member!
  comment: String!
  createdAt: DateTime! @createdAt
  updatedAt: DateTime @updatedAt
  onThing: Thing
  onComment: Comment
  onTag: Tag
}

type Vote {
  id: ID! @id @unique
  voter: Member!
  onThing: Thing
  onComment: Comment
  value: Int!
  createdAt: DateTime! @createdAt
}

type Pass {
   id: ID! @id @unique
   passer: Member!
   onThing: Thing
   createdAt: DateTime! @createdAt
}

type Member {
  id: ID! @id @unique
  displayName: String!
  name: String
  avatar: String
  rep: Int! @default(value: 0)
  points: Int! @default(value: 0)
  giveableRep: Int! @default(value: 0)
  color: String
  friends: [Member] @relation(name:"Friends")
  friendRequests: [Member] @relation(name:"FriendRequests")
  ignoredFriendRequests: [Member] @relation(name:"IgnoredFriendRequests")
  notifications: [Notification] @relation(name:"Notification")
  twitchName: String
  email: String! @unique
  votes: [Vote]
  passes: [Pass]
  createdThings: [Thing]
  ownedTags: [Tag]
  defaultPrivacy: PrivacySetting
  comments: [Comment]
  password: String!
  roles: [Role!] @scalarList(strategy: RELATION)
  role: Role
  resetToken: String
  resetTokenExpiry: Float
  twitterTokenSecret: String
  twitterUserName: String
  twitterUserID: String
  twitterUserToken: String
  twitterUserTokenSecret: String
  twitterListsObject: String
  twitterSeenIDs: [String] @scalarList(strategy: RELATION)
  createdAt: DateTime! @createdAt
  updatedAt: DateTime @updatedAt
}

type Notification {
   id: ID! @id @unique
   kind: String!
   recipient: Member! @relation(name: "Notification")
   initiator: Member! @relation(name: "NotificationInitiator")
   unread: Boolean! @default(value: true)
   linkQuery: String
}

type Tweet {
   localID: ID! @id @unique
   id_str: String! @unique
   tweetJson: Json!
}

enum Role {
  Admin
  Editor
  Moderator
  Member
  LiteMember
}

enum PrivacySetting {
   Public
   Private
   Friends
   FriendsOfFriends
}